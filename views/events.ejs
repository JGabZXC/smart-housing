<div>
    <% if(locals.featuredEvent) { %>
    <% console.log(featuredEvent) %>
        <div class="container">
            <section class="py-4 py-xl-5">
                <div class="container">
                    <h1>Featured Event</h1>
                    <div class="bg-dark border-0 border-dark border overflow-hidden" style="border-radius: 24px;">
                        <div class="row g-0">
                            <div class="col-lg-6 ">
                                <div class="text-white p-4 p-md-5">
                                    <h2 class="fw-bold text-white"><%= featuredEvent.name %></h2>
                                    <% const date = new Date(featuredEvent.date); %>
                                    <% const finalDate = new Intl.DateTimeFormat('en-US', {
                                        year: 'numeric',
                                        month: 'long',
                                        day: '2-digit',
                                        hour: '2-digit',
                                        minute: '2-digit',
                                        second: '2-digit'
                                    }).format(date) %>
                                    <p class="mb-3" style="color: #adb5bd;"> <%= featuredEvent.place %> (<%= finalDate %>) </p>
                                    <p class="mb-4"><%= featuredEvent.richDescription %></p>
                                    <div class="my-3"></div><a class="btn btn-light btn-lg" role="button" href="/project/<%= featuredEvent.slug %>">Read More</a>
                                </div>
                            </div>
                            <div class="col-lg-6  order-first order-lg-last" style="min-height: 250px;">
                                <% if (featuredEvent.imageCoverUrl) { %>
                                    <img class="w-100 h-100 fit-cover" src="<%= featuredEvent.imageCoverUrl %>" />
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    <% } else { %>
        <section class="py-4 py-xl-5">
            <div class="container">
                <h1>No Featured Event</h1>
            </div>
        </section>
    <% } %>
</div>
