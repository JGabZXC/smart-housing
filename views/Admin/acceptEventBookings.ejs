<section id="acceptEventBookingSection" class="container mt-3">
    <h2 class="fs-6 fw-semibold">Accept Event Bookings</h2>
    <div class="d-flex flex-column justify-content-between align-items-center flex-lg-row w-100 gap-2 gap-md-4">
        <form id="adminEventBookingSearchForm" class="d-flex align-items-center w-100 gap-4">
            <input class="form-control text-slate-600 rounded-3 border-slate-400 py-1 px-2 w-50" type="search" name="adminSearchBookingInput" placeholder="hh3@gmail.com" />
            <button id="adminEventBookingSearchFormButton" class="btn bg-green-800 text-slate-100 rounded-3" type="submit">Search</button>
        </form>
        <div class="d-flex flex-column justify-content-lg-end flex-md-row gap-2 w-100 gap-md-4">
            <label class="form-label d-flex gap-2 m-0" for="sort-event">Sort by:
                <select id="sortEventBooking" class="rounded-2 border-slate-400">
                    <option value="place">Place</option>
                    <option value="user.name">Name</option>
                </select>
            </label>
            <label class="form-label d-flex gap-2 m-0" for="show-event">Show Item:
                <select id="showEventBooking" class="rounded-2 border-slate-400">
                    <option value="10">10</option>
                    <option value="20">20</option>
                    <option value="50">50</option>
                </select>
            </label>
        </div>
    </div>
    <div id="tableAcceptEventBookings" class="table-responsive mt-1">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="month-range-width">Name</th>
                    <th class="month-range-width">Chosen Place</th>
                    <th>Contact Number</th>
                    <th>Email</th>
                    <th style="min-width: 360px !important;">Address</th>
                    <th class="month-range-width">Approved By</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="adminEventBookingTableBody">
                <tr>
                    <td colspan="100%" class="text-slate-600">Loading</td>
                </tr>
            </tbody>
        </table>
    </div>
    <nav class="mt-3">
        <ul id="adminEventBookingPagination" class="pagination">
            <li class="page-item">
                <a class="page-link" aria-label="Previous" href="#"><span aria-hidden="true">«</span>
                </a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">1</a></li>
            <li class="page-item">
                <a class="page-link" aria-label="Next" href="#"><span aria-hidden="true">»</span>
                </a>
            </li>
        </ul>
    </nav>
</section>