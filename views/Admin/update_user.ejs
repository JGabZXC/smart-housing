<section id="updateUserSection" class="container mt-3">
    <form id="updateSearchEmailForm" class="mx-auto w-75 my-0">
        <div>
            <label class="form-label" for="searchEmail">Search Resident</label>
            <input class="form-control" type="search" name="searchEmail" placeholder="holidayhomes@gmail.com" id="searchEmail" />
        </div>
        <div class="text-end mt-2">
            <button id="searchEmailButton" class="btn bg-green-700 text-slate-100" type="submit">Check</button>
        </div>
    </form>
    <form id="updateResidentForm" class="mx-auto w-75 my-0">
        <div>
            <label class="form-label">ID</label>
            <input id="residentId" name="residentId" class="bg-green-700 form-control text-slate-100" type="text" disabled="true" />
        </div>
        <div class="mt-2">
            <label class="form-label" for="updateName">Name</label>
            <input id="updateName" name="name" class="form-control" type="text" placeholder="John Doe" />
        </div>
        <div class="mt-2">
            <label class="form-label">Email</label>
            <input id="updateEmail" name="email" class="form-control" type="email" placeholder="holidayhomes@gmail.com" />
        </div>
        <div class="mt-2">
            <label class="form-label">Contact Number</label>
            <input id="updateContactNumber" name="contactNumber" class="form-control" type="tel" maxlength="11" placeholder="00000000000" placeholder="00000000000" />
        </div>
        <div class="mt-2">
            <label class="form-label">Role</label>
            <input id="updateRole" name="role" class="form-control" type="text" placeholder="user | admin" />
        </div>
        <div class="mt-2">
            <label class="form-label mb-0">Address</label>
            <div class="d-flex justify-content-between gap-2">
                <div class="mt-0">
                    <label class="form-label">Phase</label>
                    <input id="updatePhase" name="phase" class="form-control" type="number" placeholder="e.g. 1" />
                </div>
                <div class="mt-0">
                    <label class="form-label">Block</label>
                    <input id="updateBlock" name="block" class="form-control" type="number" placeholder="e.g. 2" />
                </div>
                <div class="mt-0">
                    <label class="form-label">Lot</label>
                    <input id="updateLot" name="lot" class="form-control" type="number" placeholder="e.g. 3" />
                </div>
                <div class="mt-0">
                    <label class="form-label">Street</label>
                    <input id="updateStreet" name="street" class="form-control" type="text" placeholder="e.g. Maligaya" />
                </div>
            </div>
        </div>
        <div class="mt-2">
            <label class="form-label">Password</label>
            <input id="updatePassword" name="password" class="form-control" type="text" placeholder="new password" />
        </div>
        <div class="mt-2">
            <label class="form-label">Confirm Password</label>
            <input id="updateConfirmPassword" name="confirmPassword" class="form-control" type="text" placeholder="retype new password" />
        </div>
        <div class="text-end mt-2">
            <button id="updateResidentButton" class="btn bg-green-700 text-slate-100" type="submit" disabled>Update</button>
        </div>
    </form>
</section>