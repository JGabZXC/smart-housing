<% const monthName = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"]; %>

<div>
  <div class="container" id="project-container" data-slug="<%= project.slug %>">
  <p hidden id="project-id" data-projectid="<%= project._id %>" data-userid="<%= locals.user ? locals.user._id : ''%>"></p>
    <section style="padding: 0px;padding-top: 20px;">
      <% let month = project.date && new Date(project.date).getMonth();
          month = monthName[month];
      %>
      <% const year = project.date && new Date(project.date).getFullYear(); %>
      <% const finalDate = `${month} ${year}` %>
      <h1><%= project.name %><%= year ? ` [${finalDate}]` : null %></h1><img class="object-fit-cover featured-photo cover-photo-s-proj" width="100%" height="600" />
    </section>
    <section style="padding: 20px 0;padding-top: 40px;">
      <p><span style="color: rgb(0, 0, 0);"><%= project.richDescription %></span></p>
      <p><span style="color: rgb(0, 0, 0);"><%- project.description.replace(/\n/g, '<br>') %></span></p>
    </section>
    <div id="carousel-1" class="carousel slide" data-bs-ride="false">
      <div class="carousel-inner">
        <div class="carousel-item active"><img class="object-fit-cover w-100 d-block" alt="Slide Image" width=" 100%" height="600" /></div>
        <div class="carousel-item"><img class="w-100 d-block" alt="Slide Image" /></div>
        <div class="carousel-item"><img class="w-100 d-block" alt="Slide Image" /></div>
      </div>
      <div><a class="carousel-control-prev" href="#carousel-1" role="button" data-bs-slide="prev"><span class="carousel-control-prev-icon"></span><span class="visually-hidden">Previous</span></a><a class="carousel-control-next" href="#carousel-1" role="button" data-bs-slide="next"><span class="carousel-control-next-icon"></span><span class="visually-hidden">Next</span></a></div>
      <div class="carousel-indicators"><button class="active" type="button" data-bs-target="#carousel-1" data-bs-slide-to="0"></button><button type="button" data-bs-target="#carousel-1" data-bs-slide-to="1"></button><button type="button" data-bs-target="#carousel-1" data-bs-slide-to="2"></button></div>
    </div>
    <section style="padding-bottom: 20px;padding-top: 20px;">
      <h1>Forum</h1>
      <div id="forum-messages">
        <div>
          <div class="d-flex flex-column justify-content-between flex-sm-column flex-md-row flex-lg-row flex-xl-row flex-xxl-row">
            <p class="text-break" style="width: 80%;">User 1: Nice project! zxczxcxzcxzcxzcxzczxczxczxczxcxzcxzczxcxzczxcxzczxczxczxczxczxczxczxczxczxczxczxczxczxczxczxczxczxczxczxczxczxczxczxczxczxczxczxczxczxczxczxczxc</p>
            <p>Date</p>
          </div>
        </div>
      </div>
          <% if(locals.user) { %>
            <div class="d-flex justify-content-between" style="padding: 0px;padding-top: 10px;padding-bottom: 10px;">
              <form id="form-message" class="d-flex justify-content-between" style="width: 100%;"><input id="message" class="form-control" type="text" placeholder="Leave a comment" style="width: 80%;" /><button class="btn btn-primary" type="submit">Submit</button></form>
            </div>
          <% } %>
      <nav>
        <ul class="pagination">
          <li class="page-item"><a class="page-link" aria-label="Previous" href="#"><span aria-hidden="true">«</span></a></li>
          <li class="page-item"><a class="page-link" href="#">1</a></li>
          <li class="page-item"><a class="page-link" href="#">2</a></li>
          <li class="page-item"><a class="page-link" href="#">3</a></li>
          <li class="page-item"><a class="page-link" href="#">4</a></li>
          <li class="page-item"><a class="page-link" href="#">5</a></li>
          <li class="page-item"><a class="page-link" aria-label="Next" href="#"><span aria-hidden="true">»</span></a></li>
        </ul>
      </nav>
    </section>
  </div>
</div>