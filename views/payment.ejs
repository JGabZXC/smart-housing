<div class="container" style="margin-top: 1rem;">
    <div class="row d-flex flex-column flex-sm-column flex-md-row flex-lg-row flex-xl-row flex-xxl-row">
        <div class="col" style="border-style: solid;padding: 10px;margin: 10px;height: auto;min-height: 180px;width: auto;border-radius: 24px;">
            <h1>Pay Dues</h1>
            <form id="pay-dues-form">
                <div class="form-input mb-2">
                    <label class="form-label">Email</label>
                    <input class="form-control" type="email" placeholder="Enter resident email" id="email" />
                </div>
                <div class="form-input mb-2">
                    <label class="form-label">From</label>
                    <input class="form-control" type="date" id="from-date" />
                </div>
                <div class="form-input mb-2">
                    <label class="form-label">To</label>
                    <input class="form-control" type="date" id="to-date" />
                </div>
                <div class="form-check mb-2">
                  <input class="form-check-input" type="checkbox" value="" id="custom-amount">
                  <label class="form-check-label" for="custom-amount">
                    Custom Amount
                  </label>
                </div>
                <div class="form-input mb-2">
                    <label class="form-label">Amount</label>
                    <input class="form-control bg-secondary text-white" type="number" id="amount" readonly />
                </div>
                <button id="insert-payment-btn" class="btn btn-primary" type="submit">Confirm</button>
            </form>
        </div>
    </div>
</div>
<div>
    <div class="container">
        <h1>Look for Individual Dues</h1>
        <div class="d-flex flex-column justify-content-between align-items-center flex-md-row">
            <div class="d-flex gap-2">
                <input type="search" placeholder="Enter email" id="resident-email" />
                <button id="search-resident-due" class="btn btn-primary" type="button">Search</button>
            </div>
            <div class="d-flex flex-column flex-sm-row gap-sm-5">
                <div class="d-flex gap-3">
                    <div><label class="form-label me-2">From</label>
                        <input type="date" />
                    </div>
                    <div>
                        <label class="form-label me-2">To</label>
                        <input type="date" />
                    </div>
                </div>
                <div>
                    <label class="form-label">Show item:Â </label>
                    <select>
                        <optgroup label="This is a group">
                            <option value="12" selected>10</option>
                            <option value="13">20</option>
                            <option value="50">50</option>
                        </optgroup>
                    </select>
                </div>
            </div>
        </div>
        <div class="table-responsive">
            <table id="dues-table" class="table">
                <thead>
                <tr>
                    <th class="custom-width">Email</th>
                    <th class="custom-width">Name</th>
                    <th class="custom-width-2">Address</th>
                    <th class="custom-width">Amount</th>
                    <th class="custom-width">Range</th>
                    <th class="custom-width">Paid On</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>No Email</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
