<section id="forgotPasswordSection" class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow">
                <div class="card-header bg-success text-white text-center">
                    <h4 class="mb-0">
                        <i class="bi bi-shield-lock"></i>
                        Forgot Password
                    </h4>
                </div>
                <div class="card-body p-4">
                    <!-- Step 1: Email Input -->
                    <div id="emailStep" class="step-container">
                        <form id="emailForm">
                            <div class="mb-3">
                                <label for="email" class="form-label">Email Address</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-envelope"></i>
                                    </span>
                                    <input type="email" class="form-control" id="email" name="email"
                                           placeholder="Enter your email address" required>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success w-100">
                                <i class="fas fa-search me-2"></i>
                                Find Account
                            </button>
                        </form>
                    </div>

                    <!-- Step 2: Security Question -->
                    <div id="questionStep" class="step-container d-none">
                        <div class="alert alert-warning">
                           <i class="bi bi-info-circle-fill"></i>
                            Please answer your security question to verify your identity.
                        </div>

                        <form id="questionForm">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Security Question:</label>
                                <p id="securityQuestion" class="text-muted bg-light p-3 rounded">
                                    <!-- Question will be populated here -->
                                </p>
                            </div>

                            <div class="mb-3">
                                <label for="answer" class="form-label">Your Answer</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-shield-lock"></i>
                                    </span>
                                    <input type="text" class="form-control" id="answer" name="answer"
                                           placeholder="Enter your answer" required>
                                </div>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-warning text-dark">
                                   <i class="bi bi-check2"></i>
                                    Verify Answer
                                </button>
                                <button type="button" id="backToEmail" class="btn btn-outline-success">
                                    <i class="bi bi-arrow-left"></i>
                                    Back to Email
                                </button>
                            </div>
                        </form>
                    </div>

                    <div id="resetStep" class="step-container d-none">
                        <div class="alert alert-warning">
                            <i class="bi bi-info-circle-fill"></i>
                            Reset Token is valid for only 10 minutes.
                        </div>
                        <form id="resetPasswordForm">
                            <div class="mb-3">
                                <label for="password" class="form-label">New Password</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-shield-lock"></i>
                                    </span>
                                    <input type="text" class="form-control" id="password" name="password"
                                           placeholder="Enter your new password" required>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">New Confirm Password</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-shield-lock"></i>
                                    </span>
                                    <input type="text" class="form-control" id="confirmPassword" name="confirmPassword"
                                           placeholder="Confirm your password" required>
                                </div>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-warning text-dark">
                                   <i class="bi bi-check-circle-fill"></i>
                                    Submit New Password
                                </button>
                            </div>
                        </form>
                    </div>

                    <!-- Success Message -->
                    <div id="successMessage" class="alert alert-success d-none">
                        <i class="bi bi-check-circle-fill"></i>
                        You can now log in with your new password.
                    </div>
                </div>

                <div class="card-footer text-center">
                    <small class="text-muted">
                        Remember your password?
                        <a href="/login" class="text-decoration-none" style="color: #198754;">Sign In</a>
                    </small>
                </div>
            </div>
        </div>
    </div>
</section>