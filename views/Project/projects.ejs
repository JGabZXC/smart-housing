
<% if(locals.featuredProject) { %>
<section class="py-4 py-xl-5">
    <div class="container">
        <div class="border rounded border-0 overflow-hidden bg-green-600">
            <div class="row g-0">
                <div class="col-lg-6">
                    <div class="text-white p-3 p-md-5">
                        <h2 class="fw-bold mb-3 text-slate-50"><%= featuredProject.name %></h2>
                        <p class="mb-4 text-slate-200">
                            <%= featuredProject.richDescription.slice(0, 400) %>
                            <%= featuredProject.richDescription.length > 400 ? '...' : '' %>
                        </p>
                        <div class="my-3">
                            <a class="btn me-2 bg-yellow-300 text-slate-600 fw-semibold" role="button" href="/projects/<%= featuredProject.slug %>">Read More</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 order-first order-lg-last">
                    <% if (featuredProject.imageCover?.signedUrl) { %>
                        <img class="w-100 h-100 object-fit-cover" src="<%= featuredProject.imageCover.signedUrl %>" alt="<%= featuredProject.name %>" />
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</section>
<% } %>
</div>
<div class="project-list">
  <div class="container">
    <h1 class="fs-4 text-slate-900"><%= featuredProject ? 'Other Projects' : 'Projects' %></h1>
    <div id="project-list-container" class="row gx-4 gy-4 row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-2 row-cols-xl-3 row-cols-xxl-3">
      <h2 class="text-slate-700 fs-6">Projects...</h2>
    </div>
    <nav style="margin-top: 12px;">
      <ul id="project-list-pagination" class="pagination">
        <li class="page-item">
            <a class="page-link" aria-label="Previous" href="#"><span aria-hidden="true">«</span></a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">1</a>
        </li>
        <li class="page-item">
            <a class="page-link" aria-label="Next" href="#"><span aria-hidden="true">»</span></a>
        </li>
      </ul>
    </nav>
  </div>
</div>