
<% if(locals.featuredEvent) { %>
<section id="featuredEventSection" class="py-4 py-xl-5">
    <div class="container">
        <div class="card-minimal">
          <img src="<%= featuredEvent.imageCover.signedUrl%>" alt="<%= featuredEvent.slug %>">
          <div class="card-minimal-body">
            <h3><%= featuredEvent.name %></h3>
             <p>
                <%= featuredEvent.richDescription.slice(0, 200) %>
                <%= featuredEvent.richDescription.length > 200 ? '...' : '' %>
            </p>
            <div>
                <a href="/events/<%= featuredEvent.slug %>">Read More</a>
            </div>
          </div>
        </div>
    </div>
</section>
<% } %>
<div class="event-list">
    <div class="container">
        <h1 class="fs-4 text-slate-900"><%= featuredEvent ? 'Other Events' : 'Events' %></h1>
        <div class="row gx-4 gy-4 row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-2 row-cols-xl-3 row-cols-xxl-3" id="event-list-container">
            <h2 class="text-slate-700 fs-6">Events...</h2>
        </div>
        <nav style="margin-top: 12px;">
              <ul id="event-list-pagination" class="pagination">
                <li class="page-item">
                    <a class="page-link" aria-label="Previous" href="#"><span aria-hidden="true">«</span></a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">1</a>
                </li>
                <li class="page-item">
                    <a class="page-link" aria-label="Next" href="#"><span aria-hidden="true">»</span></a>
                </li>
              </ul>
        </nav>
    </div>
</div>